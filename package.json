{
  "name": "airbitz-currency-decred",
  "version": "0.1.2",
  "description": "Airbitz Decred currency plugin",
  "homepage": "https://airbitz.co",
  "license": "SEE LICENSE IN LICENSE",
  "author": "Airbitz, Inc.",
  "contributors": [
    "Paul Puey <paul@airbitz.co>",
    "William Swanson <william@airbitz.co>",
    "Leon Gaban <leongaban@gmail.com>"
  ],
  "files": [
    "changelog.md",
    "lib/*"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.es.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Airbitz/airbitz-currency-decred.git"
  },
  "dependencies": {
    "biggystring": "^1.0.3",
    "jsonschema": "^1.1.1",
    "rfc4648": "^0.9.1",
    "sprintf-js": "^1.1.1",
    "uri-js": "^3.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-flow": "^6.23.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "edge-login": "^0.5.0",
    "eslint-plugin-flowtype": "^2.34.1",
    "flow-bin": "^0.49.1",
    "flow-copy-source": "^1.2.1",
    "husky": "^0.14.3",
    "json-loader": "^0.5.4",
    "mocha": "^2.4.5",
    "nyc": "^6.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "standard": "^10.0.2",
    "updot": "^1.0.2"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "scripts": {
    "precommit": "npm test",
    "flow": "flow",
    "rollup": "rollup -c",
    "updot": "updot",
    "prepare": "npm run build",
    "build": "npm run lint && npm run rollup && npm run build:flow",
    "build:flow": "flow-copy-source -v -i '**/test/**' src lib && npm run flow",
    "build:clean": "rimraf lib",
    "cover": "nyc --reporter=lcov --reporter=text --reporter=html --extension .js npm test",
    "lint --fix": "standard '*.js' 'src/**/*.js' 'test/**/*.js' --fix",
    "lint": "standard '*.js' 'src/**/*.js' 'test/**/*.js'",
    "test": "npm run build && mocha"
  }
}
